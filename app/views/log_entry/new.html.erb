<%- current_navigation_tab :flight_log, :new -%>
<%- title('Add A Flight Log Entry') -%>
<div class="box">
	<div class="pageTitle">
		<h1>
			<%= link_to "Flight Log", pilots_log_entry_index_path, :class => "crumb" %>
			<span class="delimeter"><img src="/images/crumb-delimiter.png" alt="" /></span>
			Add a Flight Log Entry&hellip;
		</h1>
		<h2>
			<%= @log_entry.aircraft_type.name %>
		</h2>
	</div>
		
	<%- form_for @log_entry, :url => { :action => :create } do |f| -%>
	
	<%= f.error_messages :header_tag => "h2", :header_message => "Please Try Again!", :message => "We had some problems saving your log entry:" %>
	
	<%= flash_messages %>
	
	<%= render :partial => "log_entry_form", :locals => { :f => f } %>
	
	<div class="container buttonBar">
		<button class="rounded" type="submit" title="Save this flight log entry">
			<b><b>
				Save Flight Log Entry
			</b></b>
		</button>
		<span class="or">or</span>
		<%= link_to 'Cancel', pilots_log_entry_index_path, :title => "Don't save this log entry, return to your flight summary page", :class => "secondary" %>
	</div>
	
	<%- end -%>
</div>