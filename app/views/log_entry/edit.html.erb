<%- current_navigation_tab :flight_log, :edit -%>
<%- title('Edit Flight Log Entry') -%>
<div class="box">
	<div class="pageTitle">
		<h1>
			<%= link_to "Flight Log", pilots_log_entry_index_path, :class => "crumb" %>
			<span class="delimeter"><img src="/images/crumb-delimiter.png" alt="" /></span>
			<%= link_to @log_entry.date.strftime("%e %B %Y"), pilots_log_entry_path, :class => "crumb" %>
			<span class="delimeter"><img src="/images/crumb-delimiter.png" alt="" /></span>
			Edit
		</h1>
		<h2>
			<%= truncate(h(@log_entry.location.name), 40) %>
		</h2>
	</div>
		
	<%- form_for @log_entry, :url => pilots_log_entry_path do |f| -%>
	
	<%= f.error_messages :header_tag => "h2", :header_message => "Please Try Again!", :message => "We had some problems saving your log entry:" %>
	
	<%= flash_messages %>
	
	<%= render :partial => "log_entry_form", :locals => { :f => f } %>
	
	<div class="container buttonBar">
		<button class="rounded" type="submit" title="Save this flight log entry">
			<b><b>
				Save Flight Log Entry
			</b></b>
		</button>
		<%= link_to "<span>Delete Flight Log Entry</span>", pilots_log_entry_path(@log_entry), :confirm => "Are you sure you want to delete this flight log entry?", :method => :delete, :class => "rounded" %>
		<span class="or">or</span>
		<%= link_to 'Cancel', pilots_log_entry_path(@log_entry), :title => "Don't save this log entry, return to your flight summary page", :class => "secondary" %>
	</div>
	
	<%- end -%>
</div>